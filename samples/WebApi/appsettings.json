{
  "ConnectionString": "Filename=microwf.sqlite",
  "Worker": {
    "Enable": false
  },
  "IdentityServer": {
    "Authority": "http://localhost:5000"
  },
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug",
        "tomware.Microwf.Engine.WorkflowProcessor": "Trace"
      }
    }
  },
  "Workflows": {
    "HolidayApprovalWorkflow": {
      "StartUrl": "api/holiday/new",
      "Description": "Simple holiday approval process."
    },
    "IssueTrackingWorkflow": {
      "StartUrl": "api/issue/new",
      "Description": "Simple issue tracking process."
    }
  }
}
